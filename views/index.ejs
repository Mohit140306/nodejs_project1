
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet'>
    <link rel="stylesheet" href="/styles.css">
    <title>Product List</title>
</head>
<body>
    <div class="container">
        <h1 style="font-family: Noto Sans;">Product List</h1>
        <form action="/add-product" method="POST" class="form">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Product Name" required>
            </div>
            <div class="form-group">
                <input type="number" name="price" class="form-control" placeholder="Product Price" required>
            </div>
            <button type="submit" class="btn">Add Product</button>
        </form>
        <ul class="product-list" style="font-family: 'Noto Sans';">
            <% products.forEach(product => { %>
                <li class="product-item">
                    <span><%= product.name %></span>
                    <span class="product-price">$<%= product.price.toFixed(2) %></span>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
